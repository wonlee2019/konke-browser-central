export MOZ_APP_BASENAME=Dot
export MOZ_APP_PROFILE=dot
export MOZ_APP_DISPLAYNAME="Dot Browser"
export MOZ_MACBUNDLE_ID=co.dothq.browser
export MOZ_DISTRIBUTION_ID=co.dothq.browser

