{
  "manifest_version": 2,

  "applications": {
    "gecko": {
      "id": "fusion@themes.dothq.co"
    }
  },

  "name": "Fusion",
  "description": "A theme with a light and dark color scheme.",
  "author": "Dot HQ",
  "version": "1.0",

  "icons": {"32": "icon.svg"},

  "theme": {
    "colors": {
      "frame": "rgb(38, 38, 38)",
      "tab_background_text": "rgba(255, 255, 255, 1)",
      "toolbar": "rgba(255, 255, 255, 1)",
      "bookmark_text": "rgb(24, 25, 26)",
      "toolbar_field": "#F7F8F9",
      "toolbar_field_text": "rgb(24, 25, 26)",
      "toolbar_field_border": "#fff",
      "toolbar_field_focus": "#ffffff",

      "popup": "#ffffff",
      "popup_text": "#0c0c0d",
      "popup_border": "#E5E5E5",
      "tab_line": "#E0E1E7",
      "toolbar_color": "rgb(24, 25, 26, 0.7)",
      "toolbar_top_separator": "#E5E5E5",
      "toolbar_bottom_separator": "#F4F4F4",
      "toolbar_vertical_separator": "#E5E5E5",
      "toolbar_field_separator": "#E5E5E5",
      "button_background_hover": "#80808057",
      "button_background_active": "#80808082",
      "popup_highlight": "#256EF5",
      "ntp_background": "#ffffff",
      "sidebar": "#FBFBFB"
    }
  },

  "theme_experiment": {
    "stylesheet": "experiment.css"
  }
}
